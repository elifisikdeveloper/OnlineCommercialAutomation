@model OnlineCommercialAutomation.Models.Classes.Personal

@{
    ViewBag.Title = "AddPersonal";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <div class="row">

        <div class="col-md-6">

            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title"> Yeni Personel Ekle</h3>
                </div>


                <form method="post" enctype="multipart/form-data">
                    <div class="card-body">

                        <div class="form-group">
                            <label> Personel Adı</label>
                            <input type="text" class="form-control" placeholder="Personel Adı" name="PersonelName">
                        </div>
                        <div class="form-group">
                            <label> Personel Soyadı</label>
                            <input type="text" class="form-control" placeholder="Personel Soyadı" name="PersonalSurname">
                        </div>

                       

                        <div class="form-group">
                            <label> Departman Id</label>
                            <input type="text" class="form-control" placeholder="Departman Id" name="DepartmentId">
                        </div>

                        <div class="form-group">
                            <label> Personel Görsel</label>
                            <input type="file" name="PersonelImage"/>
                        </div>

                    </div>

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>

    </div>

</div>

