@model OnlineCommercialAutomation.Models.Classes.Current
@{
    ViewBag.Title = "GetCurrent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">

        <div class="col-md-6">

            <div class="card card-warning">
                <div class="card-header">
                    <h3 class="card-title">  Cari Güncelle</h3>
                </div>

                @using (Html.BeginForm("UpdateCurrent", "Current", FormMethod.Post))
                {

                    <div class="card-body">
                        <div class="form-group">


                            <label ">Cari Adı</label>
                            @Html.TextBoxFor(x => x.CurrentName)
                            @Html.HiddenFor(x => x.CurrentId)


                        </div>
                        <div class="form-group">


                            <label ">Cari Soyadı</label>
                            @Html.TextBoxFor(x => x.CurrentSurname)
                       


                        </div>
                        <div class="form-group">


                            <label ">Cari Şehir</label>
                            @Html.TextBoxFor(x => x.CjurrentCity)
            

                        </div>
                        <div class="form-group">


                            <label ">Cari MAil</label>
                            @Html.TextBoxFor(x => x.CurrentMail)
                    


                        </div>
                        <div class="card-footer">
                            <button class="btn btn-primary">Güncelle</button>
                        </div>


                    </div>


                }


            </div>
        </div>

    </div>

</div>

